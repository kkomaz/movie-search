<div class="col-md-4">
  <div class="panel-panel-default">
    <div class="panel-heading">
        <center><h4><%= movie.title %></h4></center>
      <div class="movie-image">
        <center><%= image_tag "#{movie.image}" %></center>
      </div>
    </div>
    <div class="panel-body" style="text-align: center">
      <p><strong>Country:</strong> <%= movie.country %></p>
      <p><strong>Collection Price:</strong><%= movie.collection_price %> </p>
      <p><strong>Movie Description:</strong> <%= movie.long_descrip %></p> <br><br>
      <%= link_to 'Delete Watchlist', user_movie_path(@user, movie), confirm: 'Are you sure?', method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
  
