<% if user.movies.include?(movie) && UserMovie.watchlist_status(user, movie) %>
  <%= link_to 'Delete Watchlist', user_movie_path(user, movie), :remote => true, confirm: 'Are you sure?', method: :delete, class: "btn btn-danger" %>
<% else %>
  <%= link_to user_movies_path(@user, {:movies => movie.id }), class: "btn btn-success", :remote => true, :method => :post do %>
      "Save to Watchlist"
  <% end %>
<% end %>