<% if user.movies.include?(movie) && (UserMovie.where(:user_id => user.id, :movie_id => movie.id).first.watchlist == true) %>
  <%= link_to 'Delete Watchlist', user_movie_path(user, movie),
                                  :remote => true, 
                                  confirm: 'Are you sure?', 
                                  method: :delete, 
                                  class: "btn btn-danger" %>
<% else %>
  <%= link_to user_movies_path(user, {:movies => movie}), class: "btn btn-success", :remote => true,
                                      :method => :post do %>
                                        "Save to Watchlist"
                                      <% end %>
<% end %>